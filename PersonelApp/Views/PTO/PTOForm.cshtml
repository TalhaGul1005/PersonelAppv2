@using EntityLayer.DTOs
@model PTOCreateDto

<form method="post" asp-controller="PTO" asp-action="PTOForm">

	
	@if (!ViewData.ModelState.IsValid)
	{
		<div class="alert alert-danger">
			@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
			{
				<p>@error.ErrorMessage</p>
			}
		</div>
	}

	<input type="hidden" name="StaffId" value="@Model.StaffId" />
	<div class="form-group">
		<label asp-for="StartTime">StartTime</label>
		<input asp-for="StartTime" class="form-control" type="date" />
		<span asp-validation-for="StartTime" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="FinishTime">FinishTime</label>
		<input asp-for="FinishTime" class="form-control" type="date" />
		<span asp-validation-for="FinishTime" class="text-danger"></span>
	</div>
	<div class="d-grid gap-2 mt-3 justify-content-center">
		<button type="submit" class="btn btn-primary">Submit</button>
	</div>


	



</form>